# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# OpenAI API Configuration (for Whisper transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Bot Configuration
COMMAND_PREFIX=!
ADMIN_ROLE_NAME=Admin

# Channel Configuration
# Specify channel ID where reports should be sent (optional, will send to voice channel's text channel if not set)
REPORT_CHANNEL_ID=

# Database Configuration
DATABASE_PATH=./data/transcriptions.db

# Audio Configuration
AUDIO_BITRATE=96000
AUDIO_SAMPLE_RATE=48000

# Transcription Configuration
TRANSCRIPTION_LANGUAGE=en
# Options: whisper-1 (OpenAI's Whisper model)
TRANSCRIPTION_MODEL=whisper-1

# Analytics Configuration
# Minimum session duration in seconds to generate a report
MIN_SESSION_DURATION=60
# Generate daily summary reports at this time (24-hour format, e.g., "23:00")
DAILY_REPORT_TIME=23:00
